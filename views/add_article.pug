extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors   
                each error , i in errors
                    li.alert.alert-danger #{error.msg}
        form(action='/articles/add' method='post')
            .form-group
                label Title : 
                input.form-control(type='text' name='title')
            .form-group
                label Subtitle : 
                input.form-control(type='text' name='subtitle')
            .form-group
                label Category:
                select.form-control(name="category")
                    each category, i in categories
                        option(value=category._id) #{category.title}
            .form-group
                label Author : 
                input.form-control(type='text' name='author')
            .form-group
                label Body : 
                input.form-control(type='text' name='body')

            input.btn.btn-primary(type='submit', name='submit'  , value='Save')
            a.btn.btn-danger(href='/manage/articles') Back