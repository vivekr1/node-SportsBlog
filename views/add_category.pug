extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors   
                each error , i in errors
                    li.alert.alert-danger #{error.msg}
        form(action='/categories/add' method='post')
            .form-group
                label Title : 
                input.form-control(type='text' name='title')
            .form-group
                label Description : 
                textarea.form-control( name='description')
            input.btn.btn-primary(type='submit', name='submit'  , value='Save')
            a.btn.btn-danger(href='/manage/categories') Back